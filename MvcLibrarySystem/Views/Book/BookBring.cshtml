@model Entities.Concrete.Book
@{
    ViewBag.Title = "BookBring";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div style="margin:50px">

</div>

@using (Html.BeginForm("BookUpdate", "Book", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(c => c.BookId, new { @class = "form-control" })
    <br />
    <label>Kitap Adı</label>
    @Html.TextBoxFor(c => c.BookName, new { @class = "form-control" })
    <br />
    <label>Kategori</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
    <br />
    <label>Yazar</label>
    @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.writer, new { @class = "form-control" })
    <br />
    <label>Basım Yılı</label>
    @Html.TextBoxFor(c => c.PrintingYear, new { @class = "form-control" })
    <br />
    <label>Yayın Evi</label>
    @Html.TextBoxFor(c => c.Publisher, new { @class = "form-control" })
    <br />
    <label>sayfa sayısı</label>
    @Html.TextBoxFor(c => c.NumberPage, new { @class = "form-control" })
</div>
    <div><button class="btn btn-warning">Güncelle</button></div>
}