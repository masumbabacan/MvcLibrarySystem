@using Entities.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<table class="table">
    <thead class="table table-dark table-bordered">
        <tr>
            <th>
                Kategori Id
            </th>
            <th>
                Kategori Adı
            </th>
            <th>
                Sil
            </th>
            <th>
                Güncelle
            </th>
        </tr>
    </thead>
    <tbody class="table table-bordered table-hover">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CategoryId
                </td>
                <td>
                    @item.CategoryName
                </td>
                <td>
                    <a href="/Category/CategoryDelete/@item.CategoryId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Category/CategoryBring/@item.CategoryId" class="btn btn-primary">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Category/CategoryAdd" class="btn btn-danger">Yeni kategori</a>

