@using Entities.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .external {
            width: 100%;
            height: auto;
        }


        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            text-align: center;
            font-family: arial;
            float: left;
            margin: 20px;
        }

        .title {
            color: grey;
            font-size: 18px;
        }

        button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 8px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

        a {
            text-decoration: none;
            font-size: 22px;
            color: black;
        }

            button:hover, a:hover {
                opacity: 0.7;
            }
    </style>
</head>
<body>

    @foreach (var item in Model)
    {
        <div class="external">
            <div class="card">
                <img src="@item.Image" alt="John" style="width:200px; height:200px">
                <h1>@item.FirstName</h1>
                <h1>@item.LastName</h1>
                <p class="title">@item.Email</p>
                <p>@item.PhoneNumber</p>
                <p>@item.School</p>
                <div style="margin: 24px 0;">
                    <a href="#"><i class="fa fa-github"></i></a>
                    <a href="@item.LinkedIn" target="_blank"><i class="fa fa-linkedin"></i></a>
                    <a href="#"><i class="fa fa-instagram"></i></a>
                </div>
                <a href="/User/UserDelete/@item.UserId"><button style="background-color:darkred">Sil</button></a>
                <a href="/User/UserBring/@item.UserId"><button>Güncelle</button></a>
            </div>

        </div>
    }
    <div style="padding-top:660px">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
    </div>
</body>
</html>

